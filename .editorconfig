root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 4
indent_style = space
trim_trailing_whitespace = true

[*.go]
indent_style = tab

[*.{hcl,tf,tfvars}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[{Makefile,**.mk}]
# Use tabs for indentation (Makefiles require tabs)
indent_style = tab

[*.{yml,yaml,yml.tpl,yaml.tpl}]
indent_size = 2
